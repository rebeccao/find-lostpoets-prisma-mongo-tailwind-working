generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Poet {
  pid     Int      @id @map("_id")  // Use pid as the _id field and as the primary key
  pNam    String
  ori     String
  oriCnt  Int?
  lat     String?
  latCnt  Int?
  class   String
  prim    Int
  infl    String
  brd     String?
  brdCnt  Int?
  age     Float?
  ageCnt  Int?
  gen     String?
  genCnt  Int?
  pol     String?
  polCnt  Int?
  ego     String?
  egoCnt  Int?
  wrdCnt  Int
  lexCnt  Int
  rewrCnt Int
  named   Boolean?
  poem    String?
  g1Url   String
  g0Url   String

  @@index([brdCnt, brd])
  @@index([egoCnt, ego])
  @@index([ageCnt, age])
  @@index([genCnt, gen])
  @@index([ori, pid])
  @@index([lat, pid])
  @@index([brd, pid])
  @@index([age, pid])
  @@index([gen, pid])
  @@index([ego, pid])
  @@index([pol, pid])
  @@index([pNam, pid])
  @@index([named, pid])
  @@index([class, pid])
}